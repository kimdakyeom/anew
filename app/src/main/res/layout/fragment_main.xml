<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragment.MainFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <EditText
            android:id="@+id/food_edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:inputType="text"
            android:padding="5dp" />

        <ImageView
            android:id="@+id/search_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="3dp"
            android:src="@drawable/ic_baseline_search_24" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4">

        <TextView
            android:id="@+id/food_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            android:gravity="center"
            android:text="0"
            android:textSize="40sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/calories"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="155dp"
            android:gravity="center"
            android:text="g"
            android:textSize="30sp"
            app:layout_constraintStart_toEndOf="@id/food_weight"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/calories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:gravity="center"
            android:padding="20dp"
            android:layout_marginTop="100dp"
            android:text="              "
            android:textSize="15sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/carbohydrate"
            app:layout_constraintTop_toBottomOf="@id/food_weight"/>

        <TextView
            android:id="@+id/carbohydrate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:gravity="center"
            android:padding="20dp"
            android:layout_marginTop="100dp"
            android:text="              "
            android:textSize="15sp"
            app:layout_constraintLeft_toRightOf="@id/calories"
            app:layout_constraintRight_toLeftOf="@+id/protein"
            app:layout_constraintTop_toBottomOf="@id/food_weight"/>

        <TextView
            android:id="@+id/protein"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:gravity="center"
            android:padding="20dp"
            android:layout_marginTop="100dp"
            android:text="              "
            android:textSize="15sp"
            app:layout_constraintLeft_toRightOf="@id/carbohydrate"
            app:layout_constraintRight_toLeftOf="@+id/fat"
            app:layout_constraintTop_toBottomOf="@id/food_weight"/>

        <TextView
            android:id="@+id/fat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:gravity="center"
            android:padding="20dp"
            android:layout_marginTop="100dp"
            android:text="              "
            android:textSize="15sp"
            app:layout_constraintLeft_toRightOf="@id/protein"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/food_weight"/>

        <TextView
            android:id="@+id/Calories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="열량(g)"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/cal_g"
            app:layout_constraintRight_toLeftOf="@+id/carbohydrate"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/cal_g"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="cal"
            android:textSize="20sp"
            android:layout_marginTop="126dp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/carbohydrate"
            app:layout_constraintTop_toBottomOf="@id/food_weight" />

        <TextView
            android:id="@+id/Carbohydrate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="탄수화물(g)"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/car_g"
            app:layout_constraintLeft_toRightOf="@id/calories"
            app:layout_constraintRight_toLeftOf="@+id/protein"/>

        <TextView
            android:id="@+id/car_g"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="car"
            android:textSize="20sp"
            android:layout_marginTop="126dp"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@id/calories"
            app:layout_constraintRight_toLeftOf="@+id/protein"
            app:layout_constraintTop_toBottomOf="@id/food_weight" />

        <TextView
            android:id="@+id/Protein"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="단백질(g)"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/pro_g"
            app:layout_constraintLeft_toRightOf="@id/fat"
            app:layout_constraintRight_toLeftOf="@+id/carbohydrate"/>

        <TextView
            android:id="@+id/pro_g"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="pro"
            android:textSize="20sp"
            android:layout_marginTop="126dp"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@id/carbohydrate"
            app:layout_constraintRight_toLeftOf="@+id/fat"
            app:layout_constraintTop_toBottomOf="@id/food_weight" />

        <TextView
            android:id="@+id/Fat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="지방(g)"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/fat_g"
            app:layout_constraintLeft_toRightOf="@+id/protein"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:id="@+id/fat_g"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="fat"
            android:textSize="20sp"
            android:layout_marginTop="126dp"
            android:textStyle="bold"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/protein"
            app:layout_constraintTop_toBottomOf="@id/food_weight" />

        <Button
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="save"
            android:layout_marginRight="10dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fat" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>